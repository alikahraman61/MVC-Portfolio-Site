@using MvcCv.Models.Entity
@model List<TblEducation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Education List</h2>
<table class="table table-condensed">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Subtitle</th>
        <th>Subtitle2</th>
        <th>GPA</th>
        <th>Date</th>
        <th>Delete</th>
        <th>Edit</th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>@item.ID</td>
        <td>@item.Title</td>
        <td>@item.Subtitle1</td>
        <td>@item.Subtitle2</td>
        <td>@item.Date</td>
        <td>@item.GPA</td>
        <td>
            <a class="btn btn-danger btn-sm" href="/Egitim/EgitimSil/@item.ID">
                <i class="fas fa-trash"></i>Delete
            </a>
        </td>
        <td>
            <a class="btn btn-info btn-sm" href="/Egitim/EgitimDuzenle/@item.ID">
                <i class="fas fa-pen-alt"></i>Edit</a>
        </td>
    </tr>
    }


</table>
<a href="/Egitim/EgitimEkle/" class="btn btn-primary">Add</a> 