@using MvcCv.Models.Entity
@model List<TblAbout>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>About me</h2>

<br />
<form method="post">
    @foreach (var item in Model)
    {
        <label>Name</label>
        <input type="text" name="Name" class="form-control" value="@item.Name" />
        <br />
        <label>Surname</label>
        <input type="text" name="Surname" class="form-control" value="@item.Surname" />
        <br />
        <label>Address</label>
        <input type="text" name="Address" class="form-control" value="@item.Address" />
        <br />
        <label>Phone</label>
        <input type="text" name="Phone" class="form-control" value="@item.Phone" />
        <br />
        <label>Mail</label>
        <input type="text" name="Mail" class="form-control" value="@item.Mail" />
        <br />
        <label>Image</label>
        <input type="text" name="Image" class="form-control" value="@item.Image" />
        <br />
        <label>Explanation</label>
        <textarea rows="7" class="form-control" name="Explanation">@item.Explanation</textarea>

    }
    <button class="btn btn-success">Update</button>
</form>