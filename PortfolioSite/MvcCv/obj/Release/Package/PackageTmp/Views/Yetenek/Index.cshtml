@using MvcCv.Models.Entity
@model List<TblTalent>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{string renk = "";}
@{string labelrenk = "";}


<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Skills List</h3>
                            </div>
                            <div class="card-body">
                                <a href="/Yetenek/YeniYetenek/" class="btn btn-info">New Skills</a>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Skill</th>
                                            <th>Degree</th>
                                            <th style="width: 40px">Rate</th>
                                            <th>Edit</th>
                                            <th>Delete</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if (item.Rate >= 0 && item.Rate <= 50)
                                            {
                                                renk = "progress-bar bg-danger";
                                                labelrenk = "progress-bar bg-danger";
                                            }
                                            if (item.Rate >= 51 && item.Rate <= 70)
                                            {
                                                renk = "progress-bar bg-warning ";
                                                labelrenk = "progress-bar bg-warning ";
                                            }
                                            if (item.Rate >= 71 && item.Rate <= 84)
                                            {
                                                renk = "progress-bar bg-primary";
                                                labelrenk = "progress-bar bg-primary";
                                            }
                                            if (item.Rate >= 85 && item.Rate <= 100)
                                            {
                                                renk = "progress-bar bg-success";
                                                labelrenk = "progress-bar bg-success";
                                            }
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.Talent</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="@renk" style="width: @item.Rate%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="@labelrenk">@item.Rate%</span></td>
                                                <td>
                                                <a class="btn btn-info btn-sm" href="/Yetenek/YetenekDuzenle/@item.ID">
                                                    <i class="fas fa-pencil-alt"></i>Edit</a>
                                                 </td>
                                                <td>
                                                    <a class="btn btn-danger btn-sm" href="/Yetenek/YetenekSil/@item.ID">
                                                    <i class="fas fa-trash"></i>Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>



